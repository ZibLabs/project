{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Gabe's C++ Builder",
            "type": "shell",
            "command": "g++",
            "args": [
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-I/mingw64/include",
                "-L/mingw64/lib",
                "-lncursesw"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run My Script",
            "type": "shell",
            "command": "sh ./launch.sh && echo 'Script finished'",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I/mingw64/include",
                "-L/mingw64/lib",
                "-lncursesw"
            ],
            "options": {
                "cwd": "C:/msys64/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}